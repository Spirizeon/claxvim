#!/bin/bash
rm -rf ~/.config/nvim ~/.local/share/nvim 2>/dev/null
mkdir ~/.config/nvim 2>/dev/null
set -e
cp init.lua ~/.config/nvim
echo "ğŸ‘‹ Hi! Thanks for trying out Clax.nvim"
echo "========================================="
echo "âœ… Config updated :)"
echo "ğŸ˜ Loading things up (gonna take some seconds)..."
nvim --headless -c "Lazy sync" -c "qa"
echo "âœ… Plugins loaded :)"
cp clax.lua ~/.local/share/nvim/lazy/startup.nvim/lua/startup/themes
echo "âœ… Dashboard loaded :)"
echo "========================================="
echo "ğŸ‘ Clax.nvim is ready, you can now type nvim"

